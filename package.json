{
  "name": "simple-table-marketing",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "cd api && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "concurrently \"npm run build:api\" \"npm run build:client\"",
    "build:api": "cd api && npm install && npm run build",
    "build:client": "cd client && npm install && npm run build",
    "start": "cd api && npm start",
    "heroku-postbuild": "npm run build",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "copy-to-txt": "node scripts/copy-to-txt.js",
    "publish": "npm run copy-to-txt && npm run generate-sitemap && git add . && git commit -m \"$npm_config_m\" && git push"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
